alias R="R -q"
alias irc="irssi"
alias ytdl='youtube-dl -f bestvideo+bestaudio'
alias lsattr='ls -al@'

alias todo='vim ~/.todo.sh'

alias esen='trans -brief -s es -t en '
alias enes='trans -brief -s en -t es '

alias beep='echo -ne "\007"'
alias github="$(which gh)"
alias lintr='find . -type f -iname "*.r" -print0 | parallel -0 Rscript -e \""lintr::lint('"'{=1 uq(); =}'"')\""'

GITHUBDIR="${HOME}/GitHub"
WEBSITEDIR="${GITHUBDIR}/vanNijnatten.dev"
alias cdgh="cd ${GITHUBDIR}"
alias cdws="cd ${WEBSITEDIR}"

